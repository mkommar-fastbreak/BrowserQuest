{
  "name": "BrowserQuest",
  "version": "2.0.0",
  "description": "A modernized HTML5/JavaScript multiplayer game",
  "private": false,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server/js/main.js",
    "dev": "node server/js/main.js",
    "build": "cd bin && chmod +x build.sh && ./build.sh",
    "build:client": "cd bin && chmod +x build.sh && ./build.sh",
    "vercel-build": "echo 'Client build skipped - using source files directly'",
    "install-deps": "npm install",
    "postinstall": "echo 'Installation complete! Run npm start to start the server.'"
  },
  "dependencies": {
    "underscore": "^1.13.6",
    "ws": "^8.16.0",
    "sanitizer": "^0.1.3"
  },
  "devDependencies": {},
  "keywords": [
    "game",
    "multiplayer",
    "html5",
    "websocket",
    "browserquest"
  ],
  "author": "Little Workshop (modernized for 2026)",
  "license": "MPL-2.0"
}
